<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/week5"
    tools:context="com.example.bhumihar.mafiv.About_us">

    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M.A.F.I.V"
        android:textSize="60dp"
        android:textStyle="italic|bold"
        style="@style/AppTheme"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="top|center_horizontal"
        />

    <TextView
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed By :Group-06"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        style="@style/AppTheme"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version:1.0"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        style="@style/AppTheme"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purpose:Collage use"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        style="@style/AppTheme"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User:IIITV"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        style="@style/AppTheme"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        />


</LinearLayout>
