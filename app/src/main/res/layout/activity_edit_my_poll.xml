<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhumihar.mafiv.EditMyPoll">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <android.support.v7.widget.Toolbar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/edit_poll_toolbar"
            ></android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Poll"
        android:id="@+id/ff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:id="@+id/question1"
        android:layout_below="@+id/ff"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/Choice11"
        android:layout_below="@+id/question1"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/Choice22"
        android:layout_below="@+id/Choice11"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:checked="false" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/Choice33"
        android:layout_below="@+id/Choice22"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/Choice44"
        android:layout_below="@+id/Choice33"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/Choice55"
        android:layout_below="@+id/Choice44"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New CheckBox"
        android:id="@+id/Choice66"
        android:layout_below="@+id/Choice55"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:checked="false" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Choice66"
        android:layout_marginTop="10dp"
        android:id="@+id/eo1"
        android:text="Expires On:"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eo1"
        android:text="XYZ"
        android:layout_toRightOf="@+id/eo1"
        android:textSize="15sp"
        android:id="@+id/ExpiryDate"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eo1"
        android:layout_marginTop="10dp"
        android:text="Delete Poll"
        android:id="@+id/delete"

        android:background="@color/button" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/delete"
        android:layout_alignParentRight="true"
        android:text="View Results"
        android:id="@+id/viewResults"
        android:background="@color/button" />
</RelativeLayout>
