<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bhumihar.mafiv.User_Activity"
    tools:showIn="@layout/activity_time__table"
    >

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time_table_img"
            android:scaleType="fitXY"
            />
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="IIITV Time-Table"
            android:textSize="40dp"
            android:textColor="#3F51B5"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            >

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_marginTop="90dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:paddingLeft="10dp"
                android:text="Mess Menu"
                android:textSize="30dp"
                android:id="@+id/mess_t"
                android:background="@drawable/item_bg"
                />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_marginTop="80dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:paddingLeft="10dp"
                android:text="Bus"
                android:textSize="30dp"
                android:id="@+id/bus_t"
                android:background="@drawable/item_bg"

                />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:paddingLeft="5dp"
                android:text="Lecture"
                android:textSize="30dp"
                android:id="@+id/lecture_t"
                android:background="@drawable/item_bg"/>


        </LinearLayout>



    </FrameLayout>


</LinearLayout>